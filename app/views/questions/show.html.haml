%p#notice= notice
%p
  %strong Title:
  = @question.title
%p
  %strong Body:
  = @question.body
%p
  %strong User:
  = @question.user
= link_to 'Edit', edit_question_path(@question)
|
\#{link_to 'Back', questions_path}

-if !@answers.empty?
  - @answers.each do |answer|
    %ul
      %li= answer.body
      %li= answer.user.name
      %li= link_to 'Edit', edit_question_answer_path(@question, answer)
      %li= link_to 'Destroy', question_answer_path(@question, answer), data: { confirm: 'Are you sure?' }
      %li= link_to 'UpVote', question_answer_like_path(@question, answer.id), method: :put
      %li= answer.get_upvotes.size
      %li= link_to 'UnVote', question_answer_dislike_path(@question, answer.id), method: :put



= render 'answer_form'
