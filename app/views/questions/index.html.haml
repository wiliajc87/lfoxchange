= link_to "Logout", session_path(session[:user_id]), method: :delete if session[:user_id]
%p#notice= notice
%h1 Listing Questions
%ul
  - @questions.each do |question|
    %li= link_to question.title.to_s, question
    = if question.user == current_user
      %ul
        %li= link_to 'Edit', edit_question_path(question)
        %li= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Question', new_question_path