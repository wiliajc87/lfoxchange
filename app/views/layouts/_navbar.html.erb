<%= nav_bar brand: "LFOxchange", responsive: true do %>
  <%= menu_group do %>
      <%= menu_item "Home", root_path %>
      <%= menu_divider %>
      <%= drop_down "--" do %>
        <% if current_user %>
          <%= menu_item 'New Question', new_question_path %>
          <%= menu_item "Your Account", user_path(current_user) %>
          <%= menu_item "Logout", session_path(session[:user_id]), method: :delete if session[:user_id] %>
        <% else %>
          <%= menu_item "Log In", new_session_path %>
        <% end %>
    <% end %>
    <%= menu_group pull: :right do %>
      <% end %>
  <% end %>
<% end %>